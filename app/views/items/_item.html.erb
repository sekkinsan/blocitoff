<% @user.items.each do |item| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= item.name %>
      </h4>
      <small>
        submitted <%= time_ago_in_words(item.created_at) %> ago <br>
        <%= link_to "Complete!", item, method: :delete, class: 'glyphicon glyphicon-ok' %>
      </small>
    </div>
  </div>
<% end %>